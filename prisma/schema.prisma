generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider     = "mysql"
  url          = env("MYSQL_URL")
  relationMode = "foreignKeys"
}

enum FileType {
  RAW_FILE
  DIRECTORY
}

model File {
  path      String    @id
  name      String    // Bắt buộc, sẽ thêm giá trị mặc định sau
  type      FileType
  createdAt DateTime  @default(now())
  size      Int?      // Có thể null
  content   Content?  @relation("FileContent")

  @@index([path])
}

model Content {
  path String @id
  data String
  file File   @relation("FileContent", fields: [path], references: [path])

  @@index([path])
}

enum Gender {
  MALE
  FEMALE
  OTHER
}
