generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextIndex"]
}

datasource db {
  provider     = "postgresql"
  url          = env("POSTGRES_URL")
  relationMode = "foreignKeys"
}

model User {
  id             String   @id @default(cuid())
  email          String?  @db.VarChar(255)
  username       String   @unique @db.VarChar(255)
  password       String   @db.VarChar(511)
  firstName      String   @db.VarChar(255)
  lastName       String   @db.VarChar(255)
  githubUsername String?  @db.VarChar(255)
  phone          String?  @db.VarChar(255)
  birthdate      Int?
  avatarUrl      String?  @db.VarChar(255)
  gender         Gender?
  urls           String[]

  joinedAt Int
  leaveAt  Int?
}

model File {
  path      String
  type      FileType
  createdAt DateTime  @default(now())
  Content   Content[]

  @@id([path, type])
  @@index([path])
}

model Content {
  path String
  type FileType
  data String
  file File     @relation(fields: [path, type], references: [path, type])

  @@id([path, type])
}

enum FileType {
  RAW_FILE
  DIRECTORY
}

enum Gender {
  MALE
  FEMALE
  OTHER
}
