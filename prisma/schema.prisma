generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider     = "mysql"
  url          = env("MYSQL_URL")
  relationMode = "foreignKeys"
}

model File {
  path      String
  type      FileType
  createdAt DateTime  @default(now())
  Content   Content[]

  @@id([path, type])
  @@fulltext([path])
}

model Content {
  path String
  //TODO: remove unnesscessary file type in content
  type FileType
  data String
  file File     @relation(fields: [path, type], references: [path, type])

  @@id([path, type])
}

enum FileType {
  RAW_FILE
  DIRECTORY
}

enum Gender {
  MALE
  FEMALE
  OTHER
}
